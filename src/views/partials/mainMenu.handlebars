<header class="pastel-menu text-white py-3 customBorder">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1 class="mb-0 text-white">
          TecnoShop
        </h1>
      </div>

      <div class="col-md-4 d-flex justify-content-end align-items-center">
        {{#if user }}
          <button onclick="location.href='/products'" class="btn btn-light mr-2">Home</button>
          <button onclick="location.href='/carts'" class="btn btn-light mr-2">Cart</button>
          <button onclick="location.href='/api/users/logout-front'" class="btn btn-light mr-2">Logout</button>
          
          <button id="profileButton" class="btn btn-light mr-2" style="display: none;">Profile</button>

          <script>
            const userRole = '{{user.role}}';
            const profileButton = document.getElementById('profileButton');

            if (userRole === 'admin') {
              profileButton.style.display = 'inline-block';
              profileButton.addEventListener('click', function() {
                location.href='/profile';
              });
            }
          </script>
        {{else}}

          <button onclick="location.href='/login'" class="btn btn-light w-50">Login</button>
        {{/if}}
      </div>
    </div>
  </div>
</header>
