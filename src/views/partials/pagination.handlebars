<nav id="pagination" class="pagination justify-content-center">
  <ul class="pagination">
    {{#if hasPrevPage}}
      <li class="page-item">
        <a class="page-link" href="{{prevLink}}">Prev</a>
      </li>
    {{/if}}
    <li class="page-item">
      <span class="page-link">{{currentPage}}</span>
    </li>
    {{#if hasNextPage}}
      <li class="page-item">
        <a class="page-link" href="{{nextLink}}">Next</a>
      </li>
    {{/if}}
  </ul>

