<h2>Agrega tu producto</h2>

<form id="form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputProducto">Producto</label>
      <input type="text" class="form-control" id="inputProducto" placeholder="Producto" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputDescripcion">Descripción</label>
      <input type="text" class="form-control" id="inputDescripcion" placeholder="Descripción" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCode">Código</label>
      <input type="text" class="form-control" id="inputCode" placeholder="Código de Producto" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPrice">Precio</label>
      <input type="number" class="form-control" id="inputPrice" placeholder="Precio" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputStock">Valor</label>
      <select id="inputValue" class="form-control" required>
        <option value="" disabled selected> Selecciona un status </option>
        <option>True</option>
        <option>False</option>
      </select>
    </div>


    <div class="form-group col-md-6">
      <label for="inpuStock">Stock</label>
      <input type="number" class="form-control" id="inputStock" placeholder="Stock" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCategory">Categoría</label>
      <select id="inputCategory" class="form-control" required>
        <option value="" disabled selected>Selecciona una categoría</option>
        <option>Android</option>
        <option>IOS</option>
      </select>
    </div>
    <div class="form-group col-md-6 mt-3 mb-3">
      <label for="inputImage">Imagen</label>
      <input type="file" class="form-control-file" id="inputImage" accept="image/*">
    </div>
  </div>

  <button type="submit" class="btn btn-primary mb-5">Guardar Producto</button>
</form>



<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div id="productosAgregados"></div>
    </div>
  </div>
</div>


<script src="/socket.io/socket.io.js" charset="utf-8"></script>
