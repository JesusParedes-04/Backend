<ul class="productList list-group" id="productList">
  {{#if products.length}}
    {{#each products as |product|}}
      <li class="productCard list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex">
          <img src="/images/{{product.thumbnails.[0]}}" alt="{{product.title}}" class="productImage me-3">
          <div>
            <h3 class="title">{{product.title}}</h3>
            <p class="description">{{product.description}}</p>
            <p><b>${{product.price}}</b></p>
          </div>
        </div>
        <div>
          <button class="p-3 pastel-bg pastel-bg:hover customBorder" data-id="{{product._id}}">Add to cart</button>
        </div>
      </li>
    {{/each}}
  {{else}}
    <li class="list-group-item">No products found</li>
  {{/if}}
</ul>